<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.uba.fi.tdp2.trips.AttractionDetails.AttractionDetailsFragment"
    android:fillViewport="true">

    <!--<Spinner-->
        <!--android:id="@+id/attraction_details_spinner"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/attraction_details_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:layout_margin="@dimen/attraction_details_layout_margin">

        <ImageView
            android:id="@+id/attraction_cover_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ar.uba.fi.tdp2.trips.AttractionDetails.ComponentUtils.ExpandableHeightListView
            android:id="@+id/attraction_information_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/attraction_details_info_list_vertical_margin"
            android:layout_marginBottom="@dimen/attraction_details_info_list_vertical_margin"
            android:divider="@android:color/transparent"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:dividerHeight="0dp" />

        <TextView
            android:id="@id/attraction_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryLight" />

        <TextView
            android:id="@+id/write_review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_opinion" />

        <RelativeLayout
            android:id="@+id/own_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/own_review_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:stepSize="1"
                android:layout_centerHorizontal="true"
                android:progressTint="@color/colorAccent"/>

            <ar.uba.fi.tdp2.trips.AttractionDetails.ComponentUtils.ActionEditText
                android:id="@+id/own_review_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="0dp"
                android:layout_below="@id/own_review_rating"
                android:inputType="textAutoCorrect|textMultiLine"
                android:textSize="16sp"
                android:scrollHorizontally="false"
                android:visibility="gone"
                android:imeOptions="actionDone"
                android:hint="@string/review_input_hint"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/other_reviews_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/other_reviews_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/other_opinions" />


            <TextView
                android:id="@+id/see_more_reviews_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:textColor="@color/colorAccent"
                android:text="@string/see_more"/>

        </RelativeLayout>

        <include layout="@layout/review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"/>

        <RelativeLayout
            android:id="@+id/floating_action_button_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/attraction_details_audioguide_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:visibility="invisible"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_audiotrack_black_24dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


    </LinearLayout>

</ScrollView>
