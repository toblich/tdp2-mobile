<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.uba.fi.tdp2.trips.AttractionDetails.AttractionDetailsFragment">

    <!--<Spinner-->
        <!--android:id="@+id/attraction_details_spinner"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <RelativeLayout
        android:id="@+id/attraction_details_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/attraction_details_layout_margin">

        <ImageView
            android:id="@+id/attraction_cover_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/attraction_information_list"
            android:layout_below="@id/attraction_cover_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/attraction_details_info_list_vertical_margin"
            android:layout_marginBottom="@dimen/attraction_details_info_list_vertical_margin"
            android:divider="@android:color/transparent"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:dividerHeight="0dp" />

        <TextView
            android:id="@id/attraction_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/attraction_information_list" />

    </RelativeLayout>

</FrameLayout>
