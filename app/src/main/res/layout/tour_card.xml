<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/tour_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/attraction_card_elevation"
        app:cardElevation="@dimen/attraction_card_elevation"
        card_view:cardCornerRadius="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/attraction_card_horizontal_padding"
            android:paddingLeft="@dimen/attraction_card_horizontal_padding"
            android:paddingTop="@dimen/attraction_card_top_padding"
            android:paddingBottom="@dimen/attraction_card_bottom_padding"
            >

            <TextView
                android:id="@+id/tour_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/tour_card_cover_photo_width"
                android:layout_marginRight="@dimen/tour_card_cover_photo_width"
                android:layout_marginTop="@dimen/tour_card_title_top_margin"
                android:maxLines="3"
                android:textColor="@android:color/black"
                android:textSize="@dimen/tour_card_title_text_size" />

            <TextView
                android:id="@+id/tour_estimated_time"

                android:layout_width="@dimen/attraction_card_cover_photo_width"
                android:layout_height="@dimen/attraction_card_cover_photo_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/tour_card_cover_photo_margin"
                android:layout_marginStart="24dp"
                android:layout_marginTop="@dimen/tour_card_title_top_margin"
                android:adjustViewBounds="false"
                android:textSize="@dimen/tour_card_title_text_size"
                android:textColor="@android:color/black"/>

            <!--<ImageView-->
                <!--android:id="@+id/attraction_photo"-->

                <!--android:layout_width="@dimen/attraction_card_cover_photo_width"-->
                <!--android:layout_height="@dimen/attraction_card_cover_photo_height"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentLeft="false"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentStart="false"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_marginLeft="@dimen/attraction_card_cover_photo_margin"-->
                <!--android:layout_marginStart="@dimen/attraction_card_cover_photo_margin"-->
                <!--android:adjustViewBounds="false"-->
                <!--/>-->

            <TextView
                android:id="@+id/tour_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tour_name"
                android:layout_marginTop="@dimen/tour_card_description_top_margin"
                android:layout_marginBottom="@dimen/tour_card_description_bottom_margin"
                android:maxLines="4"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>